<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BioData">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plese fill the form give below....."
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textSize="22sp"
        android:layout_marginTop="280dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:elevation="10dp"
                android:layout_marginTop="350dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:id="@+id/player_progressbar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1000dp"
                        android:indeterminateDrawable="@drawable/custom_progressbar"
                        android:visibility="invisible" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="200dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/homelogo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="Biodata"
                            android:textSize="40sp"
                            app:fontFamily="@font/abhaya_libre" />


                        <EditText
                            android:id="@+id/Fullname_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="#11000000"
                            android:ems="10"
                            android:hint=" Full Name"
                            android:textAlignment="viewStart"
                            android:inputType="textPersonName" />
                        <EditText
                            android:id="@+id/character_name_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:background="#11000000"
                            android:ems="10"
                            android:hint=" Character Name(without symbols)"
                            android:inputType="textEmailAddress"
                            android:textSize="17dp" />

                        <EditText
                            android:id="@+id/Character_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:background="#11000000"
                            android:ems="10"
                            android:hint=" Character ID"
                            android:inputType="number" />
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_marginTop="30dp"
                            android:layout_height="wrap_content"
                            android:text="Server"/>
                        <Spinner
                            android:id="@+id/spinner_server_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="25dp"
                            android:background="#11000000"
                            />
                        <Spinner
                            android:id="@+id/spinner_state_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="40dp"
                            android:layout_height="25dp"
                            android:background="#11000000"
                            />
                        <EditText
                            android:id="@+id/address_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:background="#11000000"
                            android:ems="10"
                            android:hint=" Address"
                            android:inputType="textImeMultiLine" />
                        <Spinner
                            android:id="@+id/spinner_season_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="40dp"
                            android:layout_height="25dp"
                            android:background="#11000000"
                            />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:text="Season from which you started" />

                        <EditText
                            android:id="@+id/phoneid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:background="#11000000"
                            android:ems="10"
                            android:hint=" Phone"
                            android:inputType="phone" />
                        <EditText
                            android:id="@+id/KD_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:background="#11000000"
                            android:ems="10"
                            android:hint=" Kill death Ratio(KD)"
                            android:inputType="numberDecimal"/>
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:text="Current Season KD" />
                        <Spinner
                            android:id="@+id/spinner_Tier_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="40dp"
                            android:layout_height="25dp"
                            android:background="#11000000"
                            />
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:text="Current Season Tier" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_marginTop="25dp"
                            android:layout_height="wrap_content"
                            android:text="Your strong skill"/>
                        <CheckBox
                            android:id="@+id/checkBox_assault_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="Assualting" />
                        <CheckBox
                            android:id="@+id/checkBox_sniping_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="Sniping" />
                        <CheckBox
                            android:id="@+id/checkBox_tactical_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="Use of Tacticals and Throwables" />
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_marginTop="40dp"
                            android:layout_height="wrap_content"
                            android:text="Your role in team"/>
                        <CheckBox
                            android:id="@+id/checkBox_fragger_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="Entry Fragger" />
                        <CheckBox
                            android:id="@+id/checkBox_sniper_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="Sniper" />
                        <CheckBox
                            android:id="@+id/checkBox_igl_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="In game leader" />
                        <CheckBox
                            android:id="@+id/checkBox_support_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="Support" />
                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_marginTop="30dp"
                            android:layout_height="wrap_content"
                            android:text="Competetive Experience"/>
                        <Spinner
                            android:id="@+id/spinner_Expi_id"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="25dp"
                            android:background="#11000000"
                            />

                        <Button
                            android:id="@+id/Registerbtn"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/red_dot"
                            android:text="Register"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center_horizontal"
                            />

                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>